@model IEnumerable<MVCDemoNew.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("New Employee", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Employee Number")
        </th>
        <th>
            @Html.DisplayName("Employee Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
   
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PartitionKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RowKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.PartitionKey  }) |
            @Html.ActionLink("Details", "Details", new { id=item.PartitionKey  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.PartitionKey })
        </td>
    </tr>
}

</table>
